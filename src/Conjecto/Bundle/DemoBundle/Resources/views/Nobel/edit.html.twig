{% extends "DemoBundle::base.html.twig" %}

{% form_theme form ':Form:fields.html.twig' %}

{% block body %}

<div class="container">
    <ol class="breadcrumb">
        <li><a href="{{ path('laureate.index') }}">Home</a></li>
        <li><a href="{{ path('laureate.year', {year: year}) }}">{{ year }}</a></li>
        <li><a href="{{ path('laureate.category', {category: category.uri}) }}">{{ category.label }}</a></li>
    </ol>
    <h1>Edit {{ laureate['rdfs:label'].value }}</h1>

    {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
    {% for child in form.children%}
    {{ form_row(child) }}
    {% endfor %}

    <div class="form-group">
        <div class="row">
            <div class="col-sm-offset-2 col-xs-9">
                <button class="btn btn-default" type="submit" >Save</button>
            </div>
            <div class="col-xs-1">
                <a href="{{ path('laureate.remove', {uri: laureate}) }}" class="btn btn-default btn-danger">Remove</a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}