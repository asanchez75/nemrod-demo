{% extends "DemoBundle::base.html.twig" %}

{% block body %}

<div class="container">
    <h1>Nobel prizes</h1>

    <h2>By year</h2>
    {% for year in years %}
        <a href="{{ path('laureate.year', {year: year.year.value}) }}" class="btn btn-default btn-sm">{{ year.year.value }}</a>
    {% endfor %}

    <h2>By category</h2>
    {% for category in categories %}
        <a href="{{ path('laureate.category', {category: category.uri}) }}" class="btn btn-default btn-sm">{{ category['rdfs:label'] }}</a>
    {% endfor %}
    <hr />
    <a class="btn btn-primary" href="{{ path( 'laureate.create') }}">add one</a>
</div>
{% endblock %}