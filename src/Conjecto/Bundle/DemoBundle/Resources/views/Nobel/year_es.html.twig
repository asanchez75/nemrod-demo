{% extends "DemoBundle::base.html.twig" %}

{% block body %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('laureate.index') }}">Home</a></li>
            <li><a href="#">{{ year }}</a></li>
        </ol>
        <h1>List of laureates for year {{ year }}</h1>
        <div class="container">
            <ul class="nav nav-pills pull-right">
                <li role="presentation" class="active"><a href="{{ path( 'laureate.create', {year: year}) }}">add one</a></li>
            </ul>
        </div>
        <br />
        <div class="list-group">
            {% for laureateaward in items %}
                <div class="list-group-item">
                    <h4 class="list-group-item-heading">{{ laureateaward['rdfs:label'] }}</h4>
                    <a class="btn btn-primary btn-sm" href="{{ path('laureate.view', {uri: laureateaward.id}) }}">See more</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('laureate.edit', {uri: laureateaward.id}) }}">Edit</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}