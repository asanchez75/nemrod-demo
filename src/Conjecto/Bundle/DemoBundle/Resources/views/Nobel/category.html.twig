{% extends "DemoBundle::base.html.twig" %}

{% block body %}



<div class="container">
    <ol class="breadcrumb">
        <li><a href="{{ path('laureate.index') }}">Home</a></li>
        <li><a href="#">{{ category['rdfs:label'] }}</a></li>
    </ol>
    <h1>List of laureates for category {{ category['rdfs:label'] }}</h1>
    <div class="container">
        <ul class="nav nav-pills pull-right">
            <li role="presentation" class="active"><a href="{{ path( 'laureate.create', {category: category.uri}) }}">add one</a></li>
        </ul>
    </div>
    <br />
    <div class="list-group">
    {% for laureateaward in laureates %}
        <div class="list-group-item">
            <h4 class="list-group-item-heading">{% if laureateaward['rdfs:label'] is defined %}{{ laureateaward['rdfs:label'].value }}{% else %} ??? {% endif %}</h4>
            <a class="btn btn-primary btn-sm" href="{{ path('laureate.view', {uri: laureateaward.uri}) }}">See more</a>
            <a class="btn btn-primary btn-sm" href="{{ path('laureate.edit', {uri: laureateaward.uri}) }}">Edit</a>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}